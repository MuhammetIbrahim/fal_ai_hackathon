FROM node:20-alpine AS build
WORKDIR /app
COPY voice_chat/package.json voice_chat/package-lock.json* ./
RUN npm install
COPY voice_chat/ .
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL
RUN npm run build

FROM node:20-alpine
RUN npm i -g serve
WORKDIR /app
COPY --from=build /app/dist .
CMD serve -s . -l ${PORT:-3000}
